package components

templ Base(title string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8">
			<title>{title}</title>
			<meta name="viewport" content="width=device-width,initial-scale=1">
			<script src="https://unpkg.com/htmx.org@2.0.4"></script>
		</head>
		<body>
			<nav>
				<a href="/">Home</a>
			</nav>
			<h1>{title}</h1>
			{ children... }
		</body>
	</html>
}